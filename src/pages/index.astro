---
import Layout from '~/layouts/PageLayout.astro'

import type { MetaData } from '~/types'
import Hero from '~/components/widgets/LandingHero.astro'
import Explore from '~/components/widgets/Explore.astro'
import Community from '~/components/widgets/Community.astro'

const metadata: MetaData = {
  title: 'enqAI - decentralized AI',
  canonical: 'https://enqai.com',
  description:
    'Unrestricted access to AI. From image and audio generation to large language models. Fully powered by a decentralized network of GPU nodes',
  twitter: {
    handle: 'enq_AI',
    site: 'https://enqai.com',
  },
}
---

<Layout metadata={metadata}>
  <!-- Landing Hero -->
  <Hero />

  <!-- Explore the enqAI ecosystem -->
  <Explore />

  <!-- Community -->
  <Community />
</Layout>
