---
import Image from '~/components/common/Image.astro'
import feature1Logo from '~/assets/images/feature1.png'

const features = [
  {
    title: 'GENERATE IMAGE, \nAUDIO & VIDEO',
    description: 'Unleash limitless creativity with our state-of-the-art models. No restricted words. Any voice.',
    image: feature1Logo,
  },
  {
    title: 'MAKE A LIVING AS \nA GPU PROVIDER',
    description: 'Earn money by becoming an enqAI node and fulfilling user inferences globally.',
    image: feature1Logo,
  },
  {
    title: 'UNBIASED LARGE \nLANGUAGE MODEL',
    description: 'Unlock boundless creativity: no banned words, any voice, with our state-of-the-art models.',
    image: feature1Logo,
  },
]
---

<section class="relative md:-mt-[76px] not-prose">
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
    <div class="relative border border-primary rounded-xl shadow-2xl overflow-hidden">
      <div
        class="flex flex-row justify-between text-white items-center px-8 h-fit md:px-16 py-5 md:h-[420px] bg-cover bg-[url('~/assets/images/hero-gradient.svg')]"
      >
        <div class="flex flex-col gap-6 w-full md:w-1/2">
          <h1 class="text-3xl md:text-4xl font-medium md:leading-9 tracking-tight">
            Uncensorable <br />Decentralized AI
          </h1>
          <p class="text-base font-normal leading-5">
            EnqAI introduces unrestricted AI capabilities, featuring image and audio generation, and large language
            models. All powered by a decentralized network of GPU node network, ensuring <span class="text-primary"
              >freedom from biases, political agendas</span
            >, and <span class="text-primary">censorship</span>
          </p>
        </div>
      </div>
      <div class="flex flex-col gap-5 md:gap-0 md:flex-row p-5 md:pt-20 w-full md:h-[330px] bg-tertiary">
        {
          features.map(({ title, description, image }) => (
            <div class="flex flex-col w-full justify-start items-center gap-5 text-center border-b md:border-r border-primary last:border-b-0 md:last:border-r-0">
              <Image src={image} alt={title} width={48} class="hidden md:block" />
              <h1 class="text-xl font-medium whitespace-pre-line leading-5">{title}</h1>
              <p class="text-sm font-medium leading-5 w-3/4 mx-auto">{description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
