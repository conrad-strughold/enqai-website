---
import enlil3Logo from '~/assets/images/enlil3.png'
import noiseGPTLogo from '~/assets/images/noiseGPT.png'
import botifAILogo from '~/assets/images/botifAI.png'
import myAnalistLogo from '~/assets/images/myAnalist.png'
import aiDULTLogo from '~/assets/images/aiDULT.png'

import Image from '~/components/common/Image.astro'
import ProductDrawer from './ProductDrawer.tsx'

const products = [
  {
    id: 'enlil3',
    description:
      'Our proprietary Arbitrum Rollup chain. Dedicated to powering the enqAI ecosystem. \n\nDedicated chain that settles to Arbitrum One using the enqAI (formerly noiseGPT) token for gas and governance.',
    image: enlil3Logo,
    href: '#',
  },
  {
    id: 'noiseGPT',
    description: 'Our awesome voice cloning, lifelike text-to-speech and lipsync engine.',
    image: noiseGPTLogo,
    href: 'https://noisegpt.com',
  },
  {
    id: 'botifAI.app',
    description:
      "An extensive suite of customer-facing applications connected to a variety of LLM's, including enqAI LLM.",
    image: botifAILogo,
    href: 'https://www.botifai.app',
  },
  {
    id: 'myAnalyst',
    description:
      'An extensive suite of business oriented analytical tools. Train our models on your proprietary company data in a safe and shielded environment.',
    image: myAnalistLogo,
    href: '#',
  },
  {
    id: 'aiDULT',
    description: 'Automatically generate personalized video and audio content for your adult business.',
    image: aiDULTLogo,
    href: '#',
  },
] as const
---

<section class="relative max-w-7xl mx-auto px-4 sm:px-6 mb-8">
  <div class="text-center max-w-5xl mx-auto mt-16 mb-14">
    <h1 class="text-3xl md:text-[40px] font-medium md:leading-10 tracking-tight mb-7 font-heading">
      Explore the <br />enqAI ecosystem
    </h1>
    <div class="md:max-w-xl mx-auto">
      <p class="text-base font-normal leading-5 tracking-wider">
        The enqAI ecosystem ranges from a blockchain settlement layer, a network of GPU rigs running models to a
        dedicated application layer. Take a look at some of our ecosystem partners.
      </p>
    </div>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-2">
    {
      products.map(({ id, description, image, href }) => (
        <div class="flex flex-col w-full bg-gradient-to-b from-white from-50% to-[#F5F5F5] border border-primary rounded-lg shadow-xl">
          <div class="flex flex-row justify-between items-center p-5 border-b border-primary">
            <Image src={image} alt={id} width={40} />
            <ProductDrawer client:visible id={id} />
          </div>
          <div class="p-5">
            <h1 class="text-2xl font-medium">{id}</h1>
            <span class="whitespace-wrap inline-block text-xs font-normal leading-normal">{description}</span>
          </div>
          <a
            href={href}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary text-xs mt-auto ml-5 mb-5 w-fit px-2 py-1"
          >
            Open App
          </a>
        </div>
      ))
    }
    <div
      class="flex flex-col justify-center items-center text-center bg-primary border border-primary rounded-lg shadow-xl"
    >
      An ever growing ecosystem. <br />More to share soon.
    </div>
  </div>
</section>
