  :root {
    --aw-font-sans: 'Space Grotesk Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: #435bdd;
    --aw-color-secondary: rgb(30 58 138);
    --aw-color-text-muted: rgba(0, 0, 0, 0.55);
    --aw-color-bg-primary: #ffffff;
    --aw-color-bg-secondary: #f5f5f5;
    --aw-color-bg-tertiary: #eeeef1;
